{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "es2015",
    "target": "es5",
    "noImplicitAny": false,
    "outDir": "lib",
    "rootDir": "src/ngx-siema",
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "removeComments": true,
    "strictNullChecks": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "skipLibCheck": true,
    "moduleResolution": "node"
